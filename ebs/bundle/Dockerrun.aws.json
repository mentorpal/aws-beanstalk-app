{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "classifier-models-efs",
      "host": {
        "sourcePath": "/efs/models"
      }
    },
    {
      "name": "classifier-shared",
      "host": {
        "sourcePath": "/var/app/current/classifier/shared"
      }
    },
    {
      "name": "nginx-volume-www",
      "host": {
        "sourcePath": "/var/app/current/nginx/www"
      }
    },
    {
      "name": "nginx-volume-nginx-conf",
      "host": {
        "sourcePath": "/var/app/current/nginx/nginx.conf"
      }
    },
    {
      "name": "nginx-volume-default-conf",
      "host": {
        "sourcePath": "/var/app/current/nginx/conf.d"
      }
    },
    {
      "name": "uploads-efs",
      "host": {
        "sourcePath": "/efs/uploads"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "admin",
      "image": "mentorpal/mentor-admin:4.3.0-alpha.14",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-admin",
          "containerPath": "/var/log/node"
        }
      ],
      "environment": [
        {
          "name": "GRAPHQL_ENDPOINT",
          "value": "http://graphql:3001/graphql"
        }
      ]
    },
    {
      "name": "chat",
      "image": "mentorpal/mentor-client:4.2.0-alpha.26",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-chat",
          "containerPath": "/var/log/node"
        }
      ],
      "environment": [
        {
          "name": "MENTOR_API_URL",
          "value": "/classifier"
        }
      ]
    },
    {
      "name": "classifier",
      "image": "mentorpal/mentor-classifier-api:4.3.0-alpha.2",
      "environment": [
        {
          "name": "CLASSIFIER_ARCH",
          "value": "mentor_classifier.arch.lr_transformer"
        },
        {
          "name": "GRAPHQL_ENDPOINT",
          "value": "http://graphql:3001/graphql"
        },
        {
          "name": "STATUS_URL_FORCE_HTTPS",
          "value": "true"
        }
      ],
      "essential": true,
      "links": ["graphql", "redis"],
      "memory": 4608,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-classifier",
          "containerPath": "/var/log/flask"
        },
        {
          "sourceVolume": "classifier-models-efs",
          "containerPath": "/app/models",
          "readOnly": true
        },
        {
          "sourceVolume": "classifier-shared",
          "containerPath": "/app/shared",
          "readOnly": true
        }
      ]
    },
    {
      "name": "home",
      "image": "uscictdocker/mentor-home-page:4.4.0-alpha.3",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-home",
          "containerPath": "/var/log/node"
        }
      ],
      "environment": [
        {
          "name": "GRAPHQL_ENDPOINT",
          "value": "http://graphql:3001/graphql"
        }
      ]
    },
    {
      "name": "graphql",
      "image": "mentorpal/mentor-graphql:4.2.0-alpha.15",
      "essential": true,
      "memory": 256,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-graphql",
          "containerPath": "/var/log/node"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "nginx:1-alpine",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["admin", "classifier", "chat", "graphql", "home", "upload-api"],
      "mountPoints": [
        {
          "sourceVolume": "nginx-volume-www",
          "containerPath": "/etc/nginx/html",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-volume-nginx-conf",
          "containerPath": "/etc/nginx/nginx.conf",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-volume-default-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-nginx",
          "containerPath": "/var/log/nginx"
        }
      ]
    },
    {
      "name": "redis",
      "image": "redis:6-alpine",
      "essential": true,
      "memory": 128
    },
    {
      "name": "training",
      "image": "mentorpal/mentor-classifier:4.3.0-alpha.2",
      "entryPoint": ["/app/training_worker.sh"],
      "environment": [
        {
          "name": "CLASSIFIER_ARCH",
          "value": "mentor_classifier.arch.lr_transformer"
        },
        {
          "name": "GRAPHQL_ENDPOINT",
          "value": "http://graphql:3001/graphql"
        }
      ],
      "essential": true,
      "links": ["graphql", "redis"],
      "memory": 4608,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-training",
          "containerPath": "/var/log/training"
        },
        {
          "sourceVolume": "classifier-models-efs",
          "containerPath": "/app/models"
        },
        {
          "sourceVolume": "classifier-shared",
          "containerPath": "/app/shared",
          "readOnly": true
        }
      ]
    },
    {
      "name": "upload-api",
      "image": "mentorpal/mentor-upload-api:4.3.0-alpha.1",
      "environment": [
        {
          "name": "STATUS_URL_FORCE_HTTPS",
          "value": "true"
        }
      ],
      "essential": true,
      "links": ["graphql", "redis"],
      "memory": 2048,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-upload-api",
          "containerPath": "/var/log/flask"
        },
        {
          "sourceVolume": "uploads-efs",
          "containerPath": "/app/uploads"
        }
      ]
    },
    {
      "name": "upload-worker",
      "image": "mentorpal/mentor-upload-worker:4.3.0-alpha.1",
      "environment": [
        {
          "name": "GRAPHQL_ENDPOINT",
          "value": "http://graphql:3001/graphql"
        }
      ],
      "essential": true,
      "links": ["graphql", "redis"],
      "memory": 3072,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-upload-worker",
          "containerPath": "/var/log/upload-worker"
        },
        {
          "sourceVolume": "uploads-efs",
          "containerPath": "/app/uploads"
        }
      ]
    }
  ]
}
