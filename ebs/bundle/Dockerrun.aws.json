{
    "AWSEBDockerrunVersion": 2,
    "volumes": [{
            "name": "classifier-models-efs",
            "host": {
                "sourcePath": "/efs/models"
            }
        },
        {
            "name": "classifier-shared",
            "host": {
                "sourcePath": "/var/app/current/classifier/shared"
            }
        },
        {
            "name": "nginx-volume-www",
            "host": {
                "sourcePath": "/var/app/current/nginx/www"
            }
        },
        {
            "name": "nginx-volume-nginx-conf",
            "host": {
                "sourcePath": "/var/app/current/nginx/nginx.conf"
            }
        },
        {
            "name": "nginx-volume-default-conf",
            "host": {
                "sourcePath": "/var/app/current/nginx/conf.d"
            }
        }
    ],
    "containerDefinitions": [{
            "name": "admin",
            "image": "uscictdocker/mentor-admin:2.0.0-alpha.11",
            "essential": true,
            "memory": 1024,
            "mountPoints": [{
                "sourceVolume": "awseb-logs-admin",
                "containerPath": "/var/log/node"
            }],
            "environment": [{
                "name": "GRAPHQL_ENDPOINT",
                "value": "http://graphql:3001/graphql"
            }],
            "links": [
                "graphql"
            ]
        },
        {
            "name": "chat",
            "image": "uscictdocker/mentor-client:2.0.0-alpha.2",
            "essential": true,
            "memory": 1024,
            "mountPoints": [{
                "sourceVolume": "awseb-logs-chat",
                "containerPath": "/var/log/node"
            }],
            "environment": [{
                "name": "MENTOR_API_URL",
                "value": "/classifier"
            }],
            "links": [
                "classifier"
            ]
        },
        {
            "name": "classifier",
            "image": "uscictdocker/mentor-classifier-api:2.0.0-alpha.5",
            "environment": [{
                    "name": "STATUS_URL_FORCE_HTTPS",
                    "value": "true"
                },
                {
                    "name": "GRAPHQL_ENDPOINT",
                    "value": "http://graphql:3001/graphql"
                }
            ],
            "essential": true,
            "links": [
                "graphql",
                "redis"
            ],
            "memory": 8192,
            "mountPoints": [{
                    "sourceVolume": "awseb-logs-classifier",
                    "containerPath": "/var/log/flask"
                },
                {
                    "sourceVolume": "classifier-models-efs",
                    "containerPath": "/app/models",
                    "readOnly": true
                },
                {
                    "sourceVolume": "classifier-shared",
                    "containerPath": "/app/shared",
                    "readOnly": true
                }
            ]
        },
        {
            "name": "graphql",
            "image": "uscictdocker/mentor-graphql:2.0.0-alpha.9",
            "essential": true,
            "memory": 1024,
            "mountPoints": [{
                "sourceVolume": "awseb-logs-graphql",
                "containerPath": "/var/log/node"
            }]
        },
        {
            "name": "nginx",
            "image": "nginx:1-alpine",
            "essential": true,
            "memory": 512,
            "portMappings": [{
                "hostPort": 80,
                "containerPort": 80
            }],
            "links": [
                "classifier",
                "admin",
                "graphql",
                "chat"
            ],
            "mountPoints": [{
                    "sourceVolume": "nginx-volume-www",
                    "containerPath": "/etc/nginx/html",
                    "readOnly": true
                },
                {
                    "sourceVolume": "nginx-volume-nginx-conf",
                    "containerPath": "/etc/nginx/nginx.conf",
                    "readOnly": true
                },
                {
                    "sourceVolume": "nginx-volume-default-conf",
                    "containerPath": "/etc/nginx/conf.d",
                    "readOnly": true
                },
                {
                    "sourceVolume": "awseb-logs-nginx",
                    "containerPath": "/var/log/nginx"
                }
            ]
        },
        {
            "name": "redis",
            "image": "redis:6-alpine",
            "essential": true,
            "memory": 512,
            "portMappings": [{
                "hostPort": 6379,
                "containerPort": 6379
            }]
        },
        {
            "name": "training",
            "image": "uscictdocker/mentor-classifier:2.0.0-alpha.5",
            "entryPoint": [
                "/app/training_worker.sh"
            ],
            "environment": [{
                "name": "GRAPHQL_ENDPOINT",
                "value": "http://graphql:3001/graphql"
            }],
            "essential": true,
            "links": [
                "graphql",
                "redis"
            ],
            "memory": 2048,
            "mountPoints": [{
                    "sourceVolume": "awseb-logs-training",
                    "containerPath": "/var/log/training"
                },
                {
                    "sourceVolume": "classifier-models-efs",
                    "containerPath": "/app/models"
                },
                {
                    "sourceVolume": "classifier-shared",
                    "containerPath": "/app/shared",
                    "readOnly": true
                }
            ]
        }
    ]
}